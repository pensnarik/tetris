# EditorConfig helps developers define and maintain consistent coding styles
# between different editors and IDEs. More info: http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Makefiles always use tabs for indentation
[Makefile]
indent_size = 4
indent_style = tab
